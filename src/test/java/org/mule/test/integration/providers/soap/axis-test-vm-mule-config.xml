<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE mule-configuration PUBLIC "-//SymphonySoft //DTD mule-configuration XML V1.0//EN"
                                "http://www.symphonysoft.com/dtds/mule/mule-configuration.dtd">

<mule-configuration id="axis_test" version="1.0">

    <model name="test">
        <mule-descriptor name="mycomponent"
            implementation="org.mule.providers.soap.TestServiceComponent"
            inboundEndpoint="axis:vm://mule">
        </mule-descriptor>

        <mule-descriptor name="mycomponent2"
            implementation="org.mule.providers.soap.TestServiceComponent"
            inboundEndpoint="axis:vm://axis/services">
            <properties>
                <list name="serviceInterfaces">
                    <entry value="org.mule.components.simple.EchoService"/>
                    <entry value="org.mule.providers.soap.DateService"/>
                </list>
            </properties>
        </mule-descriptor>

        <mule-descriptor name="mycomponent3"
            implementation="org.mule.providers.soap.TestServiceComponent"
            inboundEndpoint="axis:vm://mule">
        </mule-descriptor>

        <mule-descriptor name="mycomponent4"
            implementation="org.mule.providers.soap.TestServiceComponent">
            <inbound-router>
                <endpoint address="axis:vm://mule" synchronous="false"/>
            </inbound-router>
        </mule-descriptor>
    </model>
</mule-configuration>
