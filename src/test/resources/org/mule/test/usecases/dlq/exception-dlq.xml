<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mule-configuration PUBLIC "-//MuleSource //DTD mule-configuration XML V1.0//EN"
                                "http://mule.mulesource.org/dtds/mule-configuration.dtd">

<mule-configuration id="jms_test" version="1.0">

    <mule-environment-properties/>

     <!-- embed Spring configuration to create a Jms Connection factory -->
    <container-context className="org.mule.module.spring.SpringContainerContext">
        <properties>
            <text-property name="configuration">
                <![CDATA[
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="jmsConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <constructor-arg>
            <value>vm://localhost?broker.persistent=false&amp;broker.useJmx=false</value>
        </constructor-arg>
    </bean>
</beans>
                ]]>
            </text-property>
        </properties>
    </container-context>

    <transaction-manager factory="org.mule.module.jotm.JotmTransactionManagerFactory"/>

    <!-- Testing with ActiveMq -->
    <connector name="jmsConnector" className="org.mule.transport.jms.JmsConnector">
        <properties>
            <container-property name="connectionFactory" reference="jmsConnectionFactory"/>
            <property name="specification" value="1.1"/>
            <!-- how many times to try and deliver a redelivered message -->
            <property name="maxRedelivery" value="1"/>
        </properties>
    </connector>

    <model name="dev">
        <mule-descriptor name="RollbackComponent"
            implementation="org.mule.component.simple.NullComponent">
            <inbound-router>
                <endpoint type="receiver" address="jms://request.queue">
                    <transaction action="BEGIN_OR_JOIN" factory="org.mule.transport.jms.JmsTransactionFactory"/>
                </endpoint>
            </inbound-router>
            <!-- this endpoint should never be invoked because the NullComponent will always
                throw an exception if invoked
            -->
            <outbound-router>
                <router className="org.mule.routing.outbound.OutboundPassThroughRouter">
                    <endpoint address="jms://out.queue"/>
                </router>
            </outbound-router>
            <!-- this exception strategy will forward the current message to a jms queue
            and will do so in the current transaction if it is available
            -->
            <exception-strategy className="org.mule.DefaultExceptionStrategy">
                <endpoint address="jms://DLQ">
                    <transaction action="JOIN_IF_POSSIBLE"/>
                </endpoint>
            </exception-strategy>
        </mule-descriptor>
    </model>
</mule-configuration>
