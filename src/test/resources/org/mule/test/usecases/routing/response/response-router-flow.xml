<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <flow name="getLaszloW10">

        <inbound-endpoint address="http://localhost:28081"
            exchange-pattern="request-response" />

        <echo-component />

        <request-reply>
            <outbound-endpoint address="vm://getReportW10"
                exchange-pattern="one-way">
                    <message-properties-transformer scope="outbound">
                        <delete-message-property key="MULE_REPLYTO"/>
                    </message-properties-transformer>
                </outbound-endpoint>
            <inbound-endpoint address="vm://W10Response"
                exchange-pattern="one-way" />
        </request-reply>


    </flow>

    <flow name="W10Report">

        <inbound-endpoint address="vm://getReportW10"
                          exchange-pattern="one-way" >
        </inbound-endpoint>

        <echo-component />

        <outbound-endpoint address="vm://getFO"
            exchange-pattern="one-way" />
    </flow>

    <flow name="W10FO">

        <inbound-endpoint address="vm://getFO"
            exchange-pattern="one-way">
            <byte-array-to-string-transformer />
        </inbound-endpoint>

        <component class="org.mule.tck.testmodels.services.TestReceiver" />

        <all>
            <outbound-endpoint address="vm://someOtherQueue"
                exchange-pattern="one-way" />
            <outbound-endpoint address="vm://W10Response"
                exchange-pattern="one-way" />
        </all>

    </flow>

</mule>
