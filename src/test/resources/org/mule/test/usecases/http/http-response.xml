<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd">

    <model name="model">
        <service name="HttpAsync">
            <echo-component/>
            <inbound-router>
                <inbound-endpoint address="http://localhost:8990">
                    <transformer-byte-array-to-string/>
                </inbound-endpoint>
            </inbound-router>
        </service>

        <service name="HttpWithoutRemoteSynch">
            <echo-component/>
            <inbound-router>
                <inbound-endpoint address="http://localhost:8999" synchronous="true">
                    <transformer-byte-array-to-string/>
                </inbound-endpoint>
            </inbound-router>
        </service>

        <service name="HttpWithRemoteSynch">
            <echo-component/>
            <inbound-router>
                <inbound-endpoint address="http://localhost:8989" remoteSync="true">
                    <transformer-byte-array-to-string/>
                </inbound-endpoint>
            </inbound-router>
        </service>
    </model>
</mule>