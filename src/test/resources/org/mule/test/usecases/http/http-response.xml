<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE mule-configuration PUBLIC "-//MuleSource //DTD mule-configuration XML V1.0//EN"
                                "http://mule.mulesource.org/dtds/mule-configuration.dtd">

<mule-configuration id="test" version="1.0">

    <transformers>
        <transformer name="ByteArrayToString"
            className="org.mule.transformers.simple.ByteArrayToString" />
    </transformers>

    <model name="model">
        <mule-descriptor name="HttpAsync" implementation="org.mule.components.simple.EchoComponent">
            <inbound-router>
                <endpoint address="http://localhost:8990" transformers="ByteArrayToString"/>
            </inbound-router>
        </mule-descriptor>

         <mule-descriptor name="HttpWithoutRemoteSynch" implementation="org.mule.components.simple.EchoComponent">
            <inbound-router>
                <endpoint address="http://localhost:8999" transformers="ByteArrayToString" synchronous="true"/>
            </inbound-router>
        </mule-descriptor>

        <mule-descriptor name="HttpWithRemoteSynch" implementation="org.mule.components.simple.EchoComponent">
            <inbound-router>
                <endpoint address="http://localhost:8989" transformers="ByteArrayToString" remoteSync="true"/>
            </inbound-router>
        </mule-descriptor>
    </model>
</mule-configuration>