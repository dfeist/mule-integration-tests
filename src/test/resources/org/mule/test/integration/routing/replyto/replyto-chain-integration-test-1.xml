<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:jms="http://www.mulesource.org/schema/mule/jms/2.0"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/jms/2.0 http://www.mulesource.org/schema/mule/jms/2.0/mule-jms.xsd">

    <!-- Testing with ActiveMq -->
    <jms:activemq-connector name="jmsConnector"/>
    
    <model name="InjectionProblem">
        <service name="pojo1">
            <inbound-router>
                <inbound-endpoint address="vm://pojo1" remoteSync="true" remoteSyncTimeout="10000"/>
            </inbound-router>
            <echo-component/>
            <outbound-router>
                <outbound-pass-through-router>
                    <outbound-endpoint address="jms://pojo2"/>
                </outbound-pass-through-router>
            </outbound-router>
            <async-reply-router timeout="7000">
                <inbound-endpoint address="jms://response"/>
                <single-async-reply-router/>
            </async-reply-router>
        </service>

        <service name="pojo2">
            <inbound-router>
                <inbound-endpoint address="jms://pojo2"/>
            </inbound-router>
            <echo-component/>
            <outbound-router>
                <outbound-pass-through-router>
                    <outbound-endpoint address="jms://pojo3"/>
                    <reply-to address="jms://response"/>
                </outbound-pass-through-router>
            </outbound-router>
        </service>

        <service name="pojo3">
            <inbound-router>
                <inbound-endpoint address="jms://pojo3"/>
            </inbound-router>
            <component class="org.mule.test.integration.service.TestReceiver"/>
        </service>

    </model>
</mule>
