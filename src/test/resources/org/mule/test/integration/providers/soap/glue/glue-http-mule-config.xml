<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE mule-configuration PUBLIC "-//MuleSource //DTD mule-configuration XML V1.0//EN"
                                "http://mule.mulesource.org/dtds/mule-configuration.dtd">

<mule-configuration id="glue_test" version="1.0">

    <model name="test">
        <mule-descriptor name="mycomponent"
            implementation="org.mule.test.integration.service.TestServiceComponent"
            inboundEndpoint="glue:http://localhost:38008/mule">
        </mule-descriptor>

        <mule-descriptor name="mycomponent2"
            implementation="org.mule.test.integration.service.TestServiceComponent"
            inboundEndpoint="glue:http://localhost:38009/mule/services">
            <properties>
                <list name="serviceInterfaces">
                    <entry value="org.mule.components.simple.EchoService"/>
                    <entry value="org.mule.test.integration.service.DateService"/>
                </list>
            </properties>
        </mule-descriptor>

        <mule-descriptor name="mycomponent3"
            implementation="org.mule.test.integration.service.TestServiceComponent"
            inboundEndpoint="glue:http://localhost:38009">
        </mule-descriptor>

        <mule-descriptor name="mycomponent4"
            implementation="org.mule.test.integration.service.TestServiceComponent">
            <inbound-router>
                <endpoint address="glue:http://localhost:38010" synchronous="false"/>
            </inbound-router>
        </mule-descriptor>
    </model>
</mule-configuration>
