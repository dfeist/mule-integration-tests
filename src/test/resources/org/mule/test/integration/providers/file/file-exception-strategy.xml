<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:file="http://www.mulesource.org/schema/mule/file"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
       http://www.mulesource.org/schema/mule/file http://www.mulesource.org/schema/mule/file/3.0/mule-file.xsd">

    <file:connector name="fileConnector" outputAppend="true" outputPattern="test-#[function:count].out">
        <default-connector-exception-strategy>
            <outbound-endpoint address="file://./.mule/errors"/>
        </default-connector-exception-strategy>
    </file:connector>

    <model name="ESTest">
        <service name="FolderToVM">
            <inbound>
                <inbound-endpoint address="file://./.mule/in">
                    <custom-transformer name="failPoint" class="org.mule.test.transformers.FailingTransformer"/>
                </inbound-endpoint>
                <forwarding-router/>
            </inbound>

            <outbound>
                <chaining-router>
                    <outbound-endpoint address="file://./.mule/out"/>
                </chaining-router>
            </outbound>
        </service>
    </model>
</mule>
