<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <!-- JOTM Transaction manager -->
    <bean id="jotm"
        class="org.springframework.transaction.jta.JotmFactoryBean"/>
    <!--
    <bean id="transactionManager"
        class="org.mule.extras.spring.transaction.MuleJtaTransactionManager">
        <property name="userTransaction">
            <ref local="jotm"/>
        </property>
    </bean>
    -->
    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	    <property name="location">
            <value>classpath:derby.properties</value>
        </property>
    </bean>
    <!-- Data Source -->
    <bean id="innerDataSource"
        class="org.enhydra.jdbc.standard.StandardXADataSource"
        destroy-method="shutdown">
        <property name="transactionManager">
            <ref local="jotm"/>
        </property>
        <property name="driverName">
            <value>org.apache.derby.jdbc.EmbeddedDriver</value>
        </property>
        <property name="url">
            <value>${database.connection}</value>
        </property>
    </bean>
    <!--
    <bean id="jdbcDataSourceXa"
        class="org.enhydra.jdbc.pool.StandardXAPoolDataSource"
        destroy-method="shutdown">
        <property name="dataSource">
            <ref local="innerDataSource"/>
        </property>
        <property name="maxSize">
            <value>10</value>
        </property>
    </bean>
    -->
    <bean id="jdbcDataSource"
           class="org.mule.providers.jdbc.xa.DataSourceWrapper">
        <property name="xaDataSource">
            <ref local="innerDataSource"/>
        </property>
        <property name="transactionManager">
            <ref local="jotm"/>
        </property>
    </bean>

    <!-- ActiveMQ -->
    <bean id="jmsConnectionFactoryXa"
        class="org.apache.activemq.ActiveMQXAConnectionFactory">
        <property name="brokerURL"><value>vm://localhost?broker.persistent=false&amp;broker.useJmx=false</value></property>
    </bean>

</beans>
