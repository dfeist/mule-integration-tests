<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE mule-configuration PUBLIC "-//MuleSource //DTD mule-configuration XML V1.0//EN"
                                "http://mule.mulesource.org/dtds/mule-configuration.dtd">

<mule-configuration id="glue_test" version="1.0">

    <model name="test">
        <mule-descriptor name="mycomponent"
            implementation="org.mule.test.integration.service.TestServiceComponent">
            <inbound-router>
                <endpoint address="glue:http://localhost:38003/mule/services"/>
            </inbound-router>
        </mule-descriptor>

        <mule-descriptor name="mycomponent2"
            implementation="org.mule.test.integration.service.TestServiceComponent">
            <inbound-router>
                <endpoint address="glue:http://localhost:38004/mule"/>
            </inbound-router>
            <properties>
                <list name="serviceInterfaces">
                    <entry value="org.mule.components.simple.EchoService"/>
                </list>
            </properties>
        </mule-descriptor>

        <mule-descriptor name="mycomponent3"
            implementation="org.mule.test.integration.service.TestServiceComponent">
            <inbound-router>
                <endpoint address="glue:http://localhost:38004/mule"/>
            </inbound-router>
        </mule-descriptor>
    </model>
</mule-configuration>
