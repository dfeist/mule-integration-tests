<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd">

    <admin-agent serverUri="tcp://localhost:38100">
        <spring:property name="wireFormat">
            <spring:bean class="org.mule.transformers.xml.wire.XStreamWireFormat"/>
        </spring:property>
    </admin-agent>
    
    <model name="test">
        <service name="mycomponent">
            <inbound-router>
                <inbound-endpoint address="axis:http://localhost:38103/mule/services"/>
            </inbound-router>
            <component>
                <singleton-object class="org.mule.test.integration.service.TestServiceComponent"/>
            </component>
        </service>

        <service name="mycomponent2">
            <inbound-router>
                <inbound-endpoint address="axis:http://localhost:38104/mule/services"/>
            </inbound-router>
            <component>
                <singleton-object class="org.mule.test.integration.service.TestServiceComponent">
                    <property key="serviceInterfaces" value="org.mule.components.simple.EchoService"/>
                </singleton-object>
            </component>
        </service>

        <service name="mycomponent3">
            <inbound-router>
                <inbound-endpoint address="axis:http://localhost:38104/mule/services"/>
            </inbound-router>
            <component>
                <singleton-object class="org.mule.test.integration.service.TestServiceComponent"/>
            </component>
        </service>
    </model>
</mule>
