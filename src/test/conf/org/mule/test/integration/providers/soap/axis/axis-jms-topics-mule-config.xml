    <model name="test">
        <mule-descriptor name="mycomponent"
            implementation="org.mule.test.integration.service.TestServiceComponent">
            <inbound-router>
                <endpoint address="axis:jms://mycomponent">
                    <properties>
                        <property name="topic" value="true"/>
